{
"Statement":[{
"Sid":"1",
"Effect":"Limit",
"Action":["ec2:RunInstances"],
"Resource":"*",
"Condition": {
                "NumericLessThanEquals":{
                        "ec2:quota-vminstancenumber":"10"
                                        }
		}
             },
{
"Effect":"Limit",
"Action":["ec2:RunInstances"],
"Resource":"arn:aws:ec2:::vmtype/m1.large",
"Condition": { 
		"NumericLessThanEquals":{
			"ec2:quota-vminstancenumber":"4"
					}
			}
		},
{
"Effect":"Limit",
"Action":["ec2:CreateVolume"],
"Resource":"*",
"Condition": {
		"NumericLessThanEquals":{
			"ec2:quota-volumetotalsize":"400"
					}
			}
		},
{
"Effect":"Limit",
"Action":["ec2:AllocateAddress"],
"Resource":"*",
"Condition": {
		"NumericLessThanEquals":{
			"ec2:quota-addressnumber":"5"
					}
			}
		}
]
}
